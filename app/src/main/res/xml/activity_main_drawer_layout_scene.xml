<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1200">

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/clLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/white" />

        </Constraint>

        <Constraint
            android:id="@+id/clLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="1"
            android:scaleY="1">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customFloatValue="0" />
            <CustomAttribute
                motion:attributeName="solidColor"
                motion:customColorValue="@color/white" />
        </Constraint>

        <Constraint
            android:id="@+id/clLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="1"
            android:scaleY="1">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customFloatValue="0" />
            <CustomAttribute
                motion:attributeName="solidColor"
                motion:customColorValue="@color/white" />
        </Constraint>

        <Constraint
            android:id="@+id/cl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:scaleX="1"
            android:scaleY="1">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customFloatValue="0" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/clLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/colorPrimary" />

        </Constraint>
        <Constraint
            android:id="@+id/clLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="7.5"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:translationX="150dp">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customFloatValue="20" />
            <CustomAttribute
                motion:attributeName="solidColor"
                motion:customColorValue="#66ffffff" />
        </Constraint>

        <Constraint
            android:id="@+id/clLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="7.5"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:translationX="175dp">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customFloatValue="20" />
            <CustomAttribute
                motion:attributeName="solidColor"
                motion:customColorValue="#99ffffff" />
        </Constraint>

        <Constraint
            android:id="@+id/cl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="7.5"
            android:scaleX="0.8"
            android:padding="20dp"
            android:scaleY="0.8"
            android:translationX="200dp">

            <CustomAttribute
                motion:attributeName="radius"
                motion:customFloatValue="20" />
        </Constraint>

    </ConstraintSet>
</MotionScene>